<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>ほんとに？</h3>

    <%= form_for(@drop) do |f| %>
      <%= f.hidden_field :content %>
      <p>味:<%= @drop.content %></p>
      <%= f.submit "いれる", class: "btn btn-primary btn-block" %>
    <% end %>

    <%= form_for(@drop, url: new_drop_path, method: :get) do |f| %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる", name: :back, class: "btn btn-default btn-block" %>
    <% end %>
  </div>
</div>
