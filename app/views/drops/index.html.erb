<div class="container-fluid">
  <div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <p><%= notice %><p>
    <h1>中身</h1>

    <%= link_to "いれる", new_drop_path %>
    <% @drops.each do |drop| %>
      <div class="row row-content">
        <p>味:<%= drop.content %></p>
        <%= link_to "つかむ", edit_drop_path(drop.id) %>
        <%= link_to "すてる", drop_path(drop.id), method: :delete, data: {confirm: "ほんとに？"} %>
      </div>
    <% end %>
  </div>
  </div>
</div>
